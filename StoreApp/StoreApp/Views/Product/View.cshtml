@model StoreApp.Models.ProductViewModel
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Product name: @Model.Name</h3>
<div>
    <div>
        <p> <strong>Price:</strong> @Model.Price</p>
        <p> <strong>Description:</strong> @Model.Description </p>
        <p> <strong>Brand:</strong>: @Model.Brand.Name </p>
        <p> <strong>Category:</strong> @Model.Category.Name</p>
        <p> <strong>Date Created:</strong> @Model.DateCreated </p>

    </div>
    <hr />
    <h3>Specifications</h3>
    @for (int i = 0; i < Model.Specifications.Count; i++)
    {
        <div>
            <strong>@Model.Specifications[i].Name:</strong> @Model.Specifications[i].Value

</div>
    }

</div>
