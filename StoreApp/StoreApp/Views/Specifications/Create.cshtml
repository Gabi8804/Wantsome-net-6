@model StoreApp.Models.SpecificationsListViewModel
@{
    ViewBag.Title = "Specifications";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Specifications</h2>
<div>
    @using (Html.BeginForm("Create", "Specifications", FormMethod.Post))
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <hr />


        for (int i = 0; i < Model.Specifications.Count; i++)
        {

<div class="form-group">
    @Html.DisplayFor(model => model.Specifications[i].Name)
    @Html.EditorFor(model => model.Specifications[i].Value, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(model => model.Specifications[i].Value, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Specifications[i].SpecId)
    @Html.HiddenFor(model => model.Specifications[i].CatSpecId)
</div>
        }
        @Html.HiddenFor(model => model.CategoryId)
        @Html.HiddenFor(model => model.ProductId)
        
        <input type="submit" value="Save Product" />
    }
</div>



@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")

<script type="text/javascript">

</script>
}
            

